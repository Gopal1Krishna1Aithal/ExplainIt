{
  "manifest_version": 3,
  "name": "ExplainIt",
  "version": "1.0",
  "description": "Explains any selected text on a webpage in a beginner-friendly way.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["tooltip.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png.png",
      "32": "icon32.png.png",
      "48": "icon48.png.png",
      "128": "icon128.png.png"
    }
  },
  "icons": {
    "16": "icon16.png.png",
    "32": "icon32.png.png",
    "48": "icon48.png.png",
    "128": "icon128.png.png"
  }
} 